{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": [
      "node",
      "express",
      "dotenv",
      "jsonwebtoken",
      "mongoose",
      "bcryptjs"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/@types/**/*"
  ]
}
