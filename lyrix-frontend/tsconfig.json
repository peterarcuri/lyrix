{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "types": ["jest", "@testing-library/jest-dom"],    
    "moduleResolution": "Node",
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
